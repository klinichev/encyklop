<style>
	footer {
		padding: 2em 1em 2em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
		counter-set: yt;
	}
	.social-links a svg {
		width: 32px;
		height: 32px;
		fill: rgb(var(--gray));
		transition: fill 200ms ease-in-out;
	}
	.social-links a:hover svg {
		fill: rgb(var(--gray-dark));
	}
	.youtube-link {
		position: relative;
		counter-increment: yt;
	}
	.youtube-link::after {
		content: counter(yt);
		position: absolute;
		top: 0;
		right: 0;
		width: 12px;
		height: 12px;
		background-color: var(--accent-dark);
		border-radius: 50%;
		color: #fff;
		font-size: 8px;
		line-height: 12px;
	}
</style>
